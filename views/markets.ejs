<%- include("partials/header"); %>

<div class="container pt-2">
<h1 class="text-center">Stock Exchange List</h1>
</div>


<div class="container pt-2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th style="width:20%" scope="col">Stock Exchange (MIC)</th>
        <th style="width:40%" scope="col">Name</th>
        <th style="width:25%" scope="col">Country</th>
        <th style="width:15%" scope="col">Number of stocks</th>
      </tr>
    </thead>
    
    <tbody>
      <% for (var i = 0; i < 9; i++) { %>
        <tr class='clickable-row' onclick="window.location='/markets/<%=tickers[i].symbol%>';">
          <td><%= tickers[i].symbol%> </td>
          <td><%= tickers[i].name.split(" (")[1].split(")")[0] %></td>
          <td><%= tickers[i].country %> </td>
          <td>
            <span class="badge badge-primary badge-pill"><%= tickers[i].numberOfStocks %> </span>
          </td>
        </tr>
    <% } %> 
    </tbody>
  </table>
</div>





<%- include("partials/footer"); %>